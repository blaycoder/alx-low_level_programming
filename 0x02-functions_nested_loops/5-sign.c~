#include "main.h"

 /**
 *print_sign - print +, 0 or - if condition are meant
 *@n - number signs
 *
 * Return: 0 if it's zero, 1 if it's positive and -1 if it's negative
 * On error
 */

int print_sign(int n)
{
if (n > 48)
{
_putchar(43);
return (1);
}
else if (n == 48)
{
_putchar(48);
return (0);
}
else if (n < 48)
{
_putchar(45);
} return (-1);
}
